<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header" style="box-shadow: 0px 1px #888888;">Unresolved Specimen Types</h2>
            </div>
        </div>
        <div class="panel" style="height:750px; overflow:scroll ;margin-top: -15px;  border: thin solid lightgrey; box-shadow: 1px 1px 1px 1px #888888;">                       
         
            <div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Sending Facility</th>                          
                            <th>Specimen Type</th>                            
                        </tr>
                    </thead>
                    <tbody>
                  
                        <% if @data.length == 0 %>
                            <tr> <td style="color:red"> no specimen type found </td> </tr>
                        <% else %> 
                            <% @data.each do |da| %>
                                
                                <tr>
                                    <td> <%= da.fac %> </td>
                                    <td> <%= da.sample %></td>
                                    <td> <button class="btn btn-sm btn-primary" onclick="resolve('<%= da.fac %>','<%= da.sample %>')"> resolve </button> </td>
                                </tr>
                            <% end %>
                        <% end %>
                                         
                    </tbody>
                </table>    
            </div>

        </div>  
    </div>
</div>


<script type="text/javascript">
    function resolve(facility,sample_name)
    {  
        window.location = "/resolve_specimen_types?sample_name=" + sample_name;
    }

</script>
