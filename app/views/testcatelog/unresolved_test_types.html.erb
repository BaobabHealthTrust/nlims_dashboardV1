<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header" style="box-shadow: 0px 1px #888888;">Unresolved Test Types</h2>
            </div>
        </div>
        <div class="panel" style="height:750px; overflow:scroll ;margin-top: -15px;  border: thin solid lightgrey; box-shadow: 1px 1px 1px 1px #888888;">                       
         
            <div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Sending Facility</th>                          
                            <th>Test Type</th>                            
                        </tr>
                    </thead>
                    <tbody>

                        <% @data.each do |da| %>
                            
                            <tr>
                                <td> <%= da.fac %> </td>
                                <td> <%= da.tes %></td>
                                <td> <button class="btn btn-sm btn-primary" onclick="resolve('<%= da.fac %>','<%= da.tes %>')"> resolve </button> </td>
                            </tr>
                        <% end %>
                                         
                    </tbody>
                </table>    
            </div>

        </div>  
    </div>
</div>


<script type="text/javascript">
    function resolve(facility,test_type)
    {  
        window.location = "/resolve_test_types?test_type=" + test_type;
    }

</script>
